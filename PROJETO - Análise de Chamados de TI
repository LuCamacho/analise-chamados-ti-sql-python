2ï¸âƒ£ SQL â€” CriaÃ§Ã£o das tabelas

CREATE TABLE chamados (
    id_chamado INTEGER PRIMARY KEY,
    data_abertura DATE,
    data_fechamento DATE,
    categoria TEXT,
    prioridade TEXT,
    status TEXT,
    tecnico TEXT,
    sla_horas INTEGER
);

